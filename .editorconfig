# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,py,json,yml,yaml,md,rst,txt}]
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# reStructuredText files
[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Quantum circuit files
[*.{qasm,qpy}]
indent_style = space
indent_size = 2

# Jupyter Notebooks (JSON format)
[*.ipynb]
indent_style = space
indent_size = 2
insert_final_newline = false

# Quantum configuration files
[quantum.config.yml]
indent_style = space
indent_size = 2

# GitHub Actions workflow files
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

[pyproject.toml]
indent_style = space
indent_size = 4

# License and changelog
[{LICENSE,CHANGELOG,CHANGELOG.md}]
indent_style = space
indent_size = 2

# CI/CD files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Quantum DevOps CI Project Metrics",
  "description": "Comprehensive metrics configuration for quantum-devops-ci project",
  "version": "1.0.0",
  "lastUpdated": "2025-08-02T00:00:00Z",
  
  "repository": {
    "name": "quantum-devops-ci",
    "fullName": "quantum-devops/quantum-devops-ci",
    "defaultBranch": "main",
    "visibility": "public",
    "language": "Python",
    "topics": [
      "quantum-computing",
      "devops",
      "ci-cd",
      "qiskit",
      "cirq",
      "github-actions",
      "automation",
      "testing"
    ]
  },
  
  "metrics": {
    "development": {
      "codeQuality": {
        "linting": {
          "tool": "eslint + flake8",
          "enabled": true,
          "threshold": {
            "maxWarnings": 0,
            "maxErrors": 0
          }
        },
        "formatting": {
          "tools": ["prettier", "black"],
          "enforced": true,
          "preCommitHook": true
        },
        "typeChecking": {
          "tools": ["typescript", "mypy"],
          "coverage": {
            "target": 90,
            "minimum": 80
          }
        }
      },
      
      "testCoverage": {
        "unit": {
          "target": 95,
          "minimum": 85,
          "frameworks": ["jest", "pytest"]
        },
        "integration": {
          "target": 80,
          "minimum": 70
        },
        "quantum": {
          "target": 75,
          "minimum": 60,
          "backends": ["qasm_simulator", "statevector_simulator"]
        }
      },
      
      "documentation": {
        "coverage": {
          "target": 90,
          "minimum": 75
        },
        "formats": ["markdown", "docstrings", "api-docs"],
        "automated": true
      }
    },
    
    "performance": {
      "buildTimes": {
        "target": "< 10 minutes",
        "warning": "10-15 minutes",
        "critical": "> 15 minutes"
      },
      
      "testExecutionTimes": {
        "unit": {
          "target": "< 2 minutes",
          "warning": "2-5 minutes"
        },
        "integration": {
          "target": "< 10 minutes",
          "warning": "10-20 minutes"
        },
        "quantum": {
          "target": "< 30 minutes",
          "warning": "30-60 minutes"
        }
      },
      
      "quantumMetrics": {
        "circuitOptimization": {
          "gateReduction": {
            "target": "> 20%",
            "measurement": "gates_before / gates_after"
          },
          "depthReduction": {
            "target": "> 15%",
            "measurement": "depth_before / depth_after"
          }
        },
        "executionEfficiency": {
          "queueTime": {
            "target": "< 5 minutes",
            "warning": "5-30 minutes",
            "critical": "> 30 minutes"
          },
          "fidelity": {
            "target": "> 0.95",
            "minimum": 0.85
          }
        }
      }
    },
    
    "security": {
      "vulnerabilityScanning": {
        "dependencies": {
          "tool": "safety + npm audit",
          "frequency": "daily",
          "autoFix": true
        },
        "code": {
          "tools": ["bandit", "semgrep", "codeql"],
          "frequency": "on_push"
        },
        "containers": {
          "tool": "trivy",
          "frequency": "on_build"
        }
      },
      
      "secretsScanning": {
        "tools": ["trufflehog", "gitleaks"],
        "frequency": "on_push",
        "blockOnDetection": true
      },
      
      "complianceScores": {
        "target": "> 95%",
        "minimum": 90,
        "frameworks": ["CIS", "NIST"]
      }
    },
    
    "operational": {
      "deploymentMetrics": {
        "frequency": {
          "target": "daily",
          "actual": "on_merge_to_main"
        },
        "successRate": {
          "target": "> 98%",
          "minimum": 95
        },
        "rollbackRate": {
          "target": "< 2%",
          "warning": "2-5%"
        }
      },
      
      "reliability": {
        "uptime": {
          "target": "99.9%",
          "measurement": "monthly"
        },
        "mttr": {
          "target": "< 1 hour",
          "warning": "1-4 hours"
        },
        "mtbf": {
          "target": "> 30 days"
        }
      }
    },
    
    "business": {
      "adoption": {
        "activeUsers": {
          "target": "growth > 10% monthly",
          "tracking": "github_stars + downloads"
        },
        "communityEngagement": {
          "issues": {
            "averageResponseTime": "< 2 days",
            "resolutionTime": "< 7 days"
          },
          "pullRequests": {
            "reviewTime": "< 1 day",
            "mergeTime": "< 3 days"
          }
        }
      },
      
      "costMetrics": {
        "quantumHardware": {
          "budget": "$1000/month",
          "costPerExperiment": {
            "target": "< $10",
            "warning": "$10-50"
          }
        },
        "infrastructure": {
          "ciCd": {
            "budget": "$200/month",
            "costPerBuild": "< $0.50"
          },
          "cloudServices": {
            "budget": "$300/month"
          }
        }
      }
    }
  },
  
  "automation": {
    "dependencyUpdates": {
      "tool": "dependabot",
      "frequency": "weekly",
      "autoMerge": {
        "patch": true,
        "minor": false,
        "major": false
      },
      "security": {
        "autoMerge": true,
        "priority": "high"
      }
    },
    
    "codeQuality": {
      "preCommitHooks": {
        "enabled": true,
        "hooks": [
          "black",
          "isort",
          "flake8",
          "prettier",
          "eslint",
          "quantum-lint"
        ]
      },
      "continuousMonitoring": {
        "codeClimate": true,
        "sonarQube": false,
        "codacy": false
      }
    },
    
    "testing": {
      "parallelExecution": true,
      "matrixTesting": {
        "python": ["3.9", "3.10", "3.11"],
        "node": ["16", "18", "20"],
        "quantumFrameworks": ["qiskit", "cirq", "pennylane"]
      },
      "flaky": {
        "detection": true,
        "retries": 3,
        "quarantine": true
      }
    },
    
    "deployment": {
      "strategies": {
        "staging": "rolling",
        "production": "blue-green"
      },
      "healthChecks": {
        "enabled": true,
        "timeout": "30s",
        "retries": 3
      },
      "rollback": {
        "automatic": true,
        "threshold": "error_rate > 5%"
      }
    },
    
    "monitoring": {
      "metrics": {
        "collection": "prometheus",
        "visualization": "grafana",
        "retention": "90 days"
      },
      "logging": {
        "aggregation": "fluentd",
        "storage": "elasticsearch",
        "retention": "30 days"
      },
      "alerting": {
        "manager": "alertmanager",
        "channels": ["slack", "email", "pagerduty"]
      }
    }
  },
  
  "reporting": {
    "frequency": {
      "daily": [
        "build_status",
        "test_results",
        "security_scans"
      ],
      "weekly": [
        "performance_summary",
        "code_quality_trends",
        "quantum_metrics"
      ],
      "monthly": [
        "adoption_metrics",
        "cost_analysis",
        "roadmap_progress"
      ],
      "quarterly": [
        "strategic_review",
        "architecture_assessment",
        "team_retrospective"
      ]
    },
    
    "dashboards": {
      "executive": {
        "url": "https://grafana.company.com/d/executive",
        "metrics": [
          "adoption_growth",
          "cost_trends",
          "reliability_score",
          "team_velocity"
        ]
      },
      "engineering": {
        "url": "https://grafana.company.com/d/engineering",
        "metrics": [
          "build_times",
          "test_coverage",
          "code_quality",
          "performance_benchmarks"
        ]
      },
      "quantum": {
        "url": "https://grafana.company.com/d/quantum",
        "metrics": [
          "circuit_optimization",
          "hardware_utilization",
          "cost_per_experiment",
          "fidelity_trends"
        ]
      }
    },
    
    "alerts": {
      "thresholds": {
        "critical": {
          "build_failure_rate": "> 10%",
          "test_failure_rate": "> 5%",
          "security_vulnerabilities": "> 0 critical",
          "deployment_failure_rate": "> 5%"
        },
        "warning": {
          "build_time": "> 10 minutes",
          "test_coverage": "< 85%",
          "quantum_cost": "> $800/month",
          "response_time": "> 2 seconds"
        }
      },
      "escalation": {
        "immediate": ["security_breach", "service_outage"],
        "business_hours": ["performance_degradation", "cost_overrun"],
        "next_day": ["code_quality_decline", "test_flakiness"]
      }
    }
  },
  
  "integrations": {
    "github": {
      "webhooks": true,
      "actions": true,
      "apps": ["dependabot", "codecov"]
    },
    "quantum": {
      "ibm": {
        "monitoring": true,
        "costTracking": true
      },
      "aws": {
        "braket": true,
        "cloudwatch": true
      },
      "google": {
        "quantumAI": true,
        "cloudMonitoring": true
      }
    },
    "monitoring": {
      "prometheus": true,
      "grafana": true,
      "jaeger": false,
      "openTelemetry": true
    },
    "communication": {
      "slack": true,
      "email": true,
      "pagerduty": false,
      "teams": false
    }
  },
  
  "compliance": {
    "dataPrivacy": {
      "gdpr": true,
      "ccpa": true,
      "dataRetention": "2 years"
    },
    "security": {
      "iso27001": false,
      "soc2": false,
      "nist": true
    },
    "opensource": {
      "license": "MIT",
      "cla": false,
      "contributing": true
    }
  },
  
  "goals": {
    "2025": {
      "q1": {
        "adoption": "1000+ GitHub stars",
        "performance": "Build time < 8 minutes",
        "reliability": "99.9% uptime"
      },
      "q2": {
        "features": "Multi-cloud support",
        "integration": "5+ quantum frameworks",
        "community": "100+ contributors"
      },
      "q3": {
        "scale": "10,000+ downloads/month",
        "enterprise": "Enterprise features",
        "certification": "Security certifications"
      },
      "q4": {
        "platform": "SaaS offering",
        "partnerships": "Industry partnerships",
        "expansion": "International adoption"
      }
    }
  }
}